  include(rootPath + '_inc/_vars')

  var SCOPE = 'home'

  var sketchList = [
    {
      href: '/bound/',
      ttl: 'Gravity',
      desc: '重力'
    },
    {
      href: '/attraction/',
      ttl: 'Particle',
      desc: '引力・斥力'
    },
    // {
