    "lint-staged": "^9.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "npm": "^6.11.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.14",
    "postcss-easings": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.18.2",
