  "description": "",
  "engines": {
    "node": "^10.15.3",
    "npm": "^6.11.3"
  },
  "scripts": {
    "hello": "npm install -D npm@6.11.3",
    "build": "NODE_ENV=production run-s clean build:*",
    "build:html": "ejs-cli '**/!(_)*.ejs' -b src/html -o dist --options src/api/data.json",
    "build:js": "webpack",
    "clean": "rimraf dist",
    "dev": "npm-run-all clean -p watch:*",
    "precommit": "lint-staged",
    "watch:html": "chokidar 'src/html/**/*.ejs' -c 'npm run build:html' --initial",
    "watch:js": "webpack-dev-server --hot --inline",
    "deploy": "firebase deploy"
  },
  "author": "hayakawasho",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
